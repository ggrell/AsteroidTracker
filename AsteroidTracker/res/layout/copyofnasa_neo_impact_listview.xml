<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="#000000"
  android:textColor="#FFFFFF">
 
 
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content" android:layout_height="210dp">
            
		<TextView android:id="@+id/Impact_date"
           	android:textSize="15dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
			android:textStyle="bold"
            android:gravity="left"
			android:textColor="#008F00"
        />
	    
	    <ImageView 
	  		android:id="@+id/Impact_Image"
	 		android:layout_width="90dp"
	 		android:layout_marginRight="5dp"
	 		android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp"
	 		android:layout_height="75dp"
	 		android:scaleType="centerCrop"
	 	/>
	 	
	 	<TextView android:id="@+id/Impact_Name"
	 		android:layout_below="@+id/Impact_date"
	 		android:textSize="15dip"
        	android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:gravity="left"
            android:layout_toRightOf="@+id/Impact_Image"            
        />
        
      	<TextView android:id="@+id/Impact_yearRange"
      		android:textSize="13dip"
            android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/Impact_Name"
  	  		android:layout_toRightOf="@+id/Impact_Image"
        />
 		<TextView android:id="@+id/Impact_potentialImpacts"
 			android:textSize="13dip"
 			android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Impact_yearRange"
           	android:layout_toRightOf="@+id/Impact_Image"   
        />
		<TextView android:id="@+id/Impact_ImpactProbability"
			android:textSize="13dip"
            android:layout_width="fill_parent"
			android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Impact_potentialImpacts"
            android:layout_toRightOf="@+id/Impact_Image"
        /> 
        <TextView android:id="@+id/Impact_VInfinity"
			android:textSize="13dip"
            android:layout_width="fill_parent"
			android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Impact_ImpactProbability"
            android:layout_toRightOf="@+id/Impact_Image"
        />
        <TextView android:id="@+id/Impact_H_AbsoluteMagnitude"
			android:textSize="13dip"
            android:layout_width="fill_parent"
			android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Impact_VInfinity"
            android:layout_toRightOf="@+id/Impact_Image"
        />  
         <TextView android:id="@+id/Impact_EstimatedDiameter"
			android:textSize="13dip"
            android:layout_width="fill_parent"
			android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Impact_H_AbsoluteMagnitude"
            android:layout_toRightOf="@+id/Impact_Image"
        />  
         <TextView android:id="@+id/Impact_PelermoScale_ave"
			android:textSize="13dip"
            android:layout_width="fill_parent"
			android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Impact_EstimatedDiameter"
            android:layout_toRightOf="@+id/Impact_Image"
        />  
          <TextView android:id="@+id/Impact_PelermoScale_max"
			android:textSize="13dip"
            android:layout_width="fill_parent"
			android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Impact_PelermoScale_ave"
            android:layout_toRightOf="@+id/Impact_Image"
        />  
        <TextView android:id="@+id/Impact_TorinoScale"
			android:textSize="13dip"
            android:layout_width="fill_parent"
			android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Impact_PelermoScale_max"
            android:layout_toRightOf="@+id/Impact_Image"
        />  
	</RelativeLayout>
</LinearLayout>

