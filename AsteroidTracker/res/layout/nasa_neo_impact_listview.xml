<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="#000000"
  android:textColor="#FFFFFF">
 
 
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content" 
            android:layout_height="100dp">
            
		<TextView android:id="@+id/nasaNeoImpact_error"
           	android:textSize="18dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
			android:textStyle="bold"
            android:gravity="left"
			android:textColor="#FFFFFF"
        />
        
	    <ImageView 
	  		android:id="@+id/Impact_Image"
	 		android:layout_width="90dp"
	 		android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp"
	 		android:layout_height="65dp"
	 		android:scaleType="centerCrop"
	 		android:layout_alignParentBottom="true"
	 		android:layout_alignParentRight="true"
	 	/>	  
	 	<TextView android:id="@+id/Impact_Name"
	 		android:textSize="20dip"
        	android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
			android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:gravity="left"
        />
		<TextView android:id="@+id/Impact_Hazard"
			android:textSize="15dip"
			android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
			android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Impact_Name"
  	  		android:gravity="left"
        />
      	<TextView android:id="@+id/Impact_yearRange"
      		android:textSize="12dip"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
  	  		android:layout_toRightOf="@+id/Impact_Name"
  	  		android:gravity="right"
        />

	</RelativeLayout>
</LinearLayout>

