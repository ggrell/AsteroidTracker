<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  
     <TextView android:id="@+id/news_error"
            android:textSize="18dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:gravity="left"
            android:textColor="#FFFFFF"
        />

     <ImageView
            android:id="@+id/jpl_articleImage"
            android:layout_width="110dp"
             android:layout_height="95dp"
            android:adjustViewBounds="true"
        />
        <TextView
            android:id="@+id/jpl_news_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/jpl_articleImage"
            android:gravity="left"
            android:textSize="17dip"
            android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        />
        <TextView
            android:id="@+id/jpl_news_Date"
            android:layout_toLeftOf="@+id/jpl_news_Description"
            android:layout_below="@+id/jpl_articleImage"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="7dp"
            android:textSize="15dip"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:color="#B0A9AB"
        />   
        <TextView
            android:id="@+id/jpl_news_Description"
            android:layout_toRightOf="@+id/jpl_articleImage"
            android:layout_below="@+id/jpl_news_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="14dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
        />



</RelativeLayout>
