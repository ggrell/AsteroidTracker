<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView android:id="@+id/books_error"
        android:textSize="18dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#FFFFFF"
    />

    <ImageView
        android:id="@+id/book_Image"
        android:layout_width="150dp"
        android:layout_height="240dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/book_author"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
         />
    
        <ImageView
          android:id="@+id/book_Image_audible"
          android:layout_width="70dp"
          android:layout_height="100dp"
          android:layout_centerInParent="true"
          android:layout_below="@+id/book_author"
          android:layout_marginBottom="10dp"
          android:adjustViewBounds="true"
          android:visibility="invisible"
        />

    <TextView
        android:id="@+id/book_title"
        android:layout_marginLeft="5dp"
        android:gravity="left"
        android:textSize="15dip"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TITLES"
    />

    <TextView
        android:id="@+id/book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/book_title"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:text="Author"
        android:textSize="10dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/book_description"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_below="@+id/book_author"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/book_Image"
        android:maxLines="10"
        android:text="TES TEST descrdescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptioniption"
        android:textSize="12dip" />

    <TextView
        android:id="@+id/checkouttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/book_Image"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:gravity="left"
        android:text="Check this title out at "
        android:textSize="17dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/book_productType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/amazon"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/book_description"
        android:layout_marginBottom="4dp"
        android:gravity="bottom"
        android:text="Media Type:"
        android:textSize="11dip"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/amazon"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:adjustViewBounds="true"
        android:clickable="false"
        android:focusable="false"
        android:src="@drawable/amazonlogo2" />
    
    <TextView
          android:id="@+id/book_detailsPageUri"
          android:layout_marginTop="10dp"
          android:textSize="2dip"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
      />

</RelativeLayout>