<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="#000000"
  android:textColor="#FFFFFF">
 
 
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            >
 
 <TextView android:id="@+id/nasaNeo_error"
           	android:textSize="18dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
			android:textStyle="bold"
            android:gravity="left"
			android:textColor="#FFFFFF"
        />
           
		<TextView android:id="@+id/nasaNeo_date"
           	android:textSize="15dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
			android:textStyle="bold"
            android:gravity="left"
			android:textColor="#33FF33"
        />
	    
	    <ImageView 
	  		android:id="@+id/picview1"
	    	android:layout_below="@+id/nasaNeo_date"
	 		android:layout_marginRight="5dp"
	 		android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp"
			android:layout_width="90dp"
	 		android:layout_height="75dp"
	 		android:scaleType="centerCrop"
	 	/>
	 	
	 	<TextView android:id="@+id/asteroidName"
	 		android:layout_below="@+id/nasaNeo_date"
	 		android:textSize="15dip"
        	android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:gravity="left"
            android:layout_toRightOf="@+id/picview1"
            android:text="@string/neoName"
        />
        
      	<TextView android:id="@+id/middletext1"
      		android:textSize="13dip"
            android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/asteroidName"
  	  		android:layout_toRightOf="@+id/picview1"
        />
 		<TextView android:id="@+id/nasaNeo_relV"
 			android:textSize="13dip"
 			android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/middletext1"
  	  		android:layout_toRightOf="@+id/picview1"
        />
		<TextView android:id="@+id/nasaNeo_estimatedDiameter"
			android:textSize="13dip"
            android:layout_width="fill_parent"
			android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nasaNeo_relV"
  	  		android:layout_toRightOf="@+id/picview1"
        />
		<TextView android:id="@+id/nasaNeo_AlertMessage"
			android:textSize="13dip"
            android:layout_width="fill_parent"
			android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nasaNeo_estimatedDiameter"
  	  		android:layout_toRightOf="@+id/picview1"
        /> 
	</RelativeLayout>
</LinearLayout>

