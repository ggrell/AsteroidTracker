<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:stretchColumns="1">
    		
    <TableRow android:layout_marginTop="5dp">
        <TextView
            android:text="Name:"
            android:textSize="18dip"
            android:padding="3dip"
            android:gravity="left" />
        <TextView
	        android:id="@+id/impactRisk_DetailView_NAME"
	       	android:textSize="18dip"
            android:layout_column="1"
            android:text=""
            android:gravity="right"
            android:padding="3dip" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Year Range:"
            android:textSize="18dip"
            android:padding="3dip"
            android:gravity="left" />
        <TextView
            android:id="@+id/impactRisk_DetailView_YEARRANGE"
			android:textSize="18dip"
			android:layout_column="1"
            android:text=""
            android:gravity="right"
            android:padding="3dip" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Potential Impacts:"
            android:textSize="18dip"
            android:padding="3dip"
            android:gravity="left"/>
        <TextView
           	android:layout_column="1"
            android:text=""
            android:textSize="18dip"
            android:gravity="right"
            android:padding="3dip"
            android:id="@+id/impactRisk_DetailView_POTENTIALIMPACT" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Earth Impact Prob:"
            android:textSize="18dip"
            android:padding="3dip"
            android:gravity="left"/>
        <TextView
            android:id="@+id/impactRisk_DetailView_IMPACTPROB"
           	android:textSize="18dip"
           	android:layout_column="1"
            android:text=""
            android:gravity="right"
            android:padding="3dip" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Vinfinity:"
			android:textSize="18dip"
            android:padding="3dip"
            android:gravity="left"/>
        <TextView
            android:id="@+id/impactRisk_DetailView_VINFINITY"
           	android:layout_column="1"
            android:text=""
            android:textSize="18dip"
            android:gravity="right"
            android:padding="3dip" />
    </TableRow>
    
	<TableRow>
        <TextView
            android:text="Absolute Magnitude:"
            android:padding="3dip"
            android:textSize="18dip"
            android:gravity="left"/>
        <TextView
            android:id="@+id/impactRisk_DetailView_ABSOLUTEMAG"
           	android:layout_column="1"
            android:text=""
            android:textSize="18dip"
            android:gravity="right"
            android:padding="3dip" />
    </TableRow>
    
	<TableRow>
        <TextView
            android:text="Estimated Diameter:"
            android:padding="3dip"
            android:textSize="18dip"
            android:gravity="left"/>
        <TextView
			android:id="@+id/impactRisk_DetailView_ESTIMATED_DIAMATER"
           	android:layout_column="1"
            android:text=""
            android:textSize="18dip"
            android:gravity="right"
            android:padding="3dip" />
    </TableRow>

	<TableRow>
        <TextView
            android:text="Torino Scale (Max):"
            android:padding="3dip"
            android:textSize="18dip"
            android:gravity="left"/>
        <TextView
        	android:id="@+id/impactRisk_DetailView_TORINOSCALE"
           	android:layout_column="1"
            android:text=""
            android:textSize="18dip"
            android:gravity="right"
            android:padding="3dip" />
    </TableRow>
    
    <TableRow>
        <TextView
            android:text="Palermo Scale (Max):"
            android:padding="3dip"
            android:textSize="18dip"
            android:gravity="left"/>
        <TextView
			android:id="@+id/impactRisk_DetailView_PALERMOSCALE"
           	android:layout_column="1"
            android:text=""
            android:textSize="18dip"
            android:gravity="right"
            android:padding="3dip" />
    </TableRow>
  
    <View
        android:layout_height="2dip"
        android:background="#FF909090" />

    <View
        android:layout_height="5dip"
        android:background="#FF909090" />
        
        <Button 
        android:layout_marginTop="5dp"
       	android:layout_width="wrap_content"
        android:id="@+id/ImpactRisk_Button_AsteroidDetailPage" 
        android:text="NASA Asteroid details page"
        android:onClick="asteroidDetailsPage"/>
  
		<Button android:layout_marginTop="5dp" 
		android:id="@+id/ImpactRisk_Button_AsteroidOrbitDiagrams"
		android:text="Orbital diagram and elements"
		android:onClick="asteroidOrbitPage"/>
     
</TableLayout>